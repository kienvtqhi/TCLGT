<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kienvt.tclgt" >

    <application
        android:name=".common.TclgtApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SecondActivity" />
        <activity android:name=".activities.ThirdActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".activities.HomeActivity" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="tclgt.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />

        <meta-data
            android:name="AA_MODELS"
            android:value="com.kienvt.tclgt.models.MOffence" />

        <activity android:name=".activities.DBActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
